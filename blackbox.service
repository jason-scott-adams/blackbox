[Unit]
Description=Black Box OSINT Scheduler
After=network.target

[Service]
Type=simple
User=atoms
WorkingDirectory=/home/atoms/code/blackbox
Environment="PATH=/home/atoms/.local/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/atoms/.local/bin/uv run blackbox serve
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target
