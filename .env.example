# Black Box Configuration

# Database
BLACKBOX_DB_PATH=data/blackbox.db

# HIBP (Have I Been Pwned) - required for breach monitoring
BLACKBOX_HIBP_API_KEY=your-hibp-api-key
BLACKBOX_HIBP_EMAILS=email1@example.com,email2@example.com

# GitHub (optional, increases rate limit)
BLACKBOX_GITHUB_TOKEN=your-github-token

# NVD (optional, increases rate limit)
BLACKBOX_NVD_API_KEY=your-nvd-api-key

# Finnhub (optional, for earnings calendar)
BLACKBOX_FINNHUB_API_KEY=your-finnhub-api-key

# SEC EDGAR (user agent required by SEC)
BLACKBOX_SEC_USER_AGENT=YourApp/1.0 (your-email@example.com)
BLACKBOX_SEC_TRACKED_COMPANIES=AAPL,MSFT,GOOGL,NVDA

# Digest output directory
BLACKBOX_INBOX_DIR=./inbox

# Schedule intervals (minutes)
BLACKBOX_RSS_SYNC_INTERVAL=30
BLACKBOX_HIBP_SYNC_INTERVAL=1440
BLACKBOX_NVD_SYNC_INTERVAL=240
BLACKBOX_GITHUB_SYNC_INTERVAL=360
BLACKBOX_NOAA_SYNC_INTERVAL=60
BLACKBOX_EARNINGS_SYNC_INTERVAL=360
BLACKBOX_SEC_SYNC_INTERVAL=120
BLACKBOX_DETECTION_INTERVAL=60
BLACKBOX_DIGEST_INTERVAL=1440
